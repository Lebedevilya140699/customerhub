{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom", "es2019.array", "es2019.string"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@core/auth": ["libs/auth/src/index.ts"],
			"@core/breadcrumbs": ["libs/breadcrumbs/src/index.ts"],
			"@core/card": ["libs/card/src/index.ts"],
			"@core/common": ["libs/common/src/index.ts"],
			"@core/config": ["libs/config/src/index.ts"],
			"@core/core-lib": ["libs/core-lib/src/index.ts"],
			"@core/curtain": ["libs/curtain/src/index.ts"],
			"@core/cv": ["libs/cv/src/index.ts"],
			"@core/dashboard": ["libs/dashboard/src/index.ts"],
			"@core/domain": ["libs/domain/src/index.ts"],
			"@core/employees": ["libs/employees/src/index.ts"],
			"@core/grid": ["libs/grid/src/index.ts"],
			"@core/http": ["libs/http/src/index.ts"],
			"@core/layout": ["libs/layout/src/index.ts"],
			"@core/navigation": ["libs/navigation/src/index.ts"],
			"@core/platform": ["libs/platform/src/index.ts"],
			"@core/profile": ["libs/profile/src/index.ts"],
			"@core/session": ["libs/session/src/index.ts"],
			"@core/settings": ["libs/settings/src/index.ts"],
			"@core/tooltip-filter": ["libs/tooltip-filter/src/index.ts"],
			"@core/tasks": ["libs/tasks/src/index.ts"],
			"@core/user": ["libs/user/src/index.ts"]
		},
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"types": ["node", "jest"]
	},
	"exclude": ["node_modules", "tmp", "**/*.spec.ts"]
}
